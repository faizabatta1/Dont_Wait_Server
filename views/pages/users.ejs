<%- include('../parties/header') %>
    <% users.forEach(function(user){ %>
        <div class="card container-lg mt-3 mb-3" style="width: 30%;">
            <img src="<%= user.image.split('3000')[1] %>" class="card-img-top" alt="no image" width="150" height="180">
            <div class="card-body">
              <h5 class="card-title"><%= `${user.firstname} - ${user.lastname}` %></h5>
              <div type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">delete</div>
            </div>
        </div>

        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  are you sure you want to delete <%= `${user.firstname} - ${user.lastname}` %> ?
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">cancel</button>
                  <form action="/admin/users/<%= user.id %>/delete" method="post">
                  <input type="submit" class="btn btn-primary" value="confirm">
                  </form>
                </div>
              </div>
            </div>
          </div>
    <% }); %>

    <%- include('../parties/footer') %>